@model AtekKurumsal.ViewModels.ProductModel


<div id="left_column" class="column col-xs-12 col-sm-3">
    <section id="layered_block_left" class="block">
        <h4 class="title_block">Catalog</h4>
        <span id="filter-toggle">Filter<span class="filter-close"></span></span>
        <div class="block_content">
            <form action="#" id="layered_form">
                <div>
                    <div class="layered_filter">
                        @foreach (var item in Model.Özellik)
                        {
                            <div class="layered_subtitle_heading">
                                <span class="layered_subtitle">@item.ÖzellikAdi</span>
                            </div>
                            <ul id="ul_layered_category_0" class="col-lg-12 layered_filter_ul">

                                @Html.Action("_AltFilters", "Urun", new { id = item.ÖzellikId })

                            </ul>
                        }
                    </div>

                </div>
                <input type="hidden" name="id_category_layered" value="12">
            </form>
        </div>

        <div id="layered_ajax_loader" style="display: none;">
            <p id="layered_block_loader"></p>
        </div>
    </section>
</div>


