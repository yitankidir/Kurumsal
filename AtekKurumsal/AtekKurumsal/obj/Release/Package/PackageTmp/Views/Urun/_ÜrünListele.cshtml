@model AtekKurumsal.ViewModels.ProductModel
@using PagedList;
@using PagedList.Mvc;

<div id="ajax-main">
    <ul class="product_list grid row">

        @foreach (var item in Model.Products)
        {

            <li class="ajax_block_product  col-xs-6 col-sm-6 col-md-6 last-in-line last-item-of-tablet-line last-item-of-mobile-line">
                <div class="product-container" itemscope itemtype="https://schema.org/Product">
                    <div class="left-block">
                        <div class="product-image-container">
                            <a class="product_img_link" href="http://ld-prestashop.template-help.com/prestashop_59032/index.php?id_product=8&amp;controller=product&amp;id_lang=1" title="Sink with Unique Hand Painting Pattern &amp; Brushed Nickel" itemprop="url">

                                <img class="replace-2x img-responsive" src="@item.Resim" alt="Sink with Unique Hand Painting Pattern &amp; Brushed Nickel" title="Sink with Unique Hand Painting Pattern &amp; Brushed Nickel" itemprop="image" />
                            </a>

                            <a class="sale-box" href="">
                                <span class="sale-label">KOD : @item.ÜrünKodu</span>
                            </a>

                        </div>
                    </div>

                    <div class="right-block">
                        <h5 itemprop="name">
                            <a class="product-name" href="http://ld-prestashop.template-help.com/prestashop_59032/index.php?id_product=8&amp;controller=product&amp;id_lang=1" title="Sink with Unique Hand Painting Pattern &amp; Brushed Nickel" itemprop="url">
                                <span class="list-name">Sink with Unique Hand Painting Pattern &amp;...</span>
                                <span class="grid-name">@item.ÜrünAdi</span>
                            </a>
                        </h5>


                        <div class="button-container">
                            <a itemprop="url" class="lnk_view btn btn-sm btn-default  customize " href="http://ld-prestashop.template-help.com/prestashop_59032/index.php?id_product=8&amp;controller=product&amp;id_lang=1" title="View">
                                <span>Customize</span>
                            </a>

                            <a class="quick-view" href="http://ld-prestashop.template-help.com/prestashop_59032/index.php?id_product=8&amp;controller=product&amp;id_lang=1" data-href="http://ld-prestashop.template-help.com/prestashop_59032/index.php?id_product=8&amp;controller=product&amp;id_lang=1">
                                <span>Quick view</span>
                            </a>

                        </div>
                    </div>
                </div>
            </li>

        }

    </ul>

    <div class="content_sortPagiBarr">
        <div class="bottom-pagination-content clearfix">

            <div id="pagination_bottom" class="pagination clearfix">
                <form class="showall" action="" method="get">
                    <div>
                        <button type="submit" class="btn btn-sm btn-default">
                            <span>Show all</span>
                        </button>
                        <input type="hidden" name="id_lang" value="1" />
                        <input type="hidden" name="id_category" value="12" />
                        <input type="hidden" name="controller" value="category" />
                        <input name="n" id="nb_items" class="hidden" value="20" />
                    </div>
                </form>

                <ul class="pagination">
                    @Html.PagedListPager(Model.Products, page => Url.Action("Index", new RouteValueDictionary
        {
            {"Page",page},
            {"KategoriId",Model.KategoriId}
        }), PagedListRenderOptions.EnableUnobtrusiveAjaxReplacing(new AjaxOptions { UpdateTargetId = "ajax-main" }))
                </ul>

            </div>
            <div class="product-count">
                Showing 1 - 6 of @ViewBag.UrunSayi Ürün
            </div>

        </div>
    </div>

</div>





